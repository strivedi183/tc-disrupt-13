<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href="/">Albumeer</a>
    <ul class="nav">
      <% if @auth.present? %>
      <li><%= link_to('My Account Page', @auth) %></li>
      <li><%= link_to('My Events', '#') %></li>
      <li class="dropdown">
        <%= link_to('New Event', new_event_path, :class => 'dropdown-toggle', :'data-toggle' => 'dropdown') %>
        <ul class="dropdown-menu">
          <% @auth.events.each do |event| %>
            <li><%= link_to(event.name, event_path(event.id)) %></li>
          <% end %>
        </ul>
      </li>
      <li><%= link_to('Logout', login_path, :method => 'delete') %></li>
      <% else %>
      <li><%= link_to('Login', login_path, :remote => true) %></li>
      <li><%= link_to('Register', new_user_path, :remote => true) %></li>
      <% end %>
      <li><%= link_to('All Public Events', events_path) %></li>
    </ul>
  </div>
</div>