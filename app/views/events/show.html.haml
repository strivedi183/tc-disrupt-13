.row
  .span12
    %h2= @event.name
    #main{:role => "main"}
      %ul#tiles
        - @event.contents.each do |content|
          - if content.content_type == 'twitter' && content.twitter_media_url.present?
            %li= image_tag(content.twitter_media_upload.thumb)
          - elsif content.content_type == 'instagram' && content.instagram_media_url.present?
            %li= image_tag(content.instagram_media_url, :size => '225x225')
          -elsif content.content_type == 'twitter' && content.twitter_media_url.blank?
            - content.twitter_body.split
            %li= content.twitter_body


